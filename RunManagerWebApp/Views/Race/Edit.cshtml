@using RunManagerWebApp.Data.Enum;
@model Race;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja zawodów</h1>

<h4>@Html.DisplayFor(c=>Model.Title)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" value="AddressId" id="AddressId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Nazwa</label>
                <input asp-for="Title" class="form-control" placeholder="Nazwa" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" class="form-control" placeholder="Opis" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Logo</label>
                <input asp-for="Image" class="form-control" placeholder="URL" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceType">Rodzaj biegów</label>
                <select asp-for="RaceType" asp-items="@Html.GetEnumSelectList(typeof(RaceType))" class="form-control">
                    <option>--Wybierz--</option>
                </select>
                <span asp-validation-for="RaceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceDistance">Dystans</label>
                <select asp-for="RaceDistance" asp-items="@Html.GetEnumSelectList(typeof(RaceDistance))" class="form-control">
                    <option>--Wybierz--</option>
                </select>
                <span asp-validation-for="RaceType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RaceDate">Data zawodów</label>
                <input asp-for="RaceDate" class="form-control" type="datetime-local"></input>
                <span asp-validation-for="RaceDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address.PostalCode" class="control-label">Kod pocztowy</label>
                <input asp-for="Address.PostalCode" class="form-control" placeholder="Kod pocztowy"></input>
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label">Miasto</label>
                <input asp-for="Address.City" class="form-control" placeholder="Miasto"></input>
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label">Ulica i numer</label>
                <input asp-for="Address.Street" class="form-control" placeholder="Ulica i numer"></input>
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Utwórz" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-info">Wróć do istniejących juz zawodów</a>
            </div>
        </form>
    </div>
    <div class="col align-self-center text-center">
        <img id="ImgNew" width="65%" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
            $("#Image").on("change", function () {
                var output = document.getElementById("ImgNew");
                output.src = $(this).val();
            })
        </script>
}
