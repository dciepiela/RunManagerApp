@using RunManagerWebApp.ViewModels;
@model List<UserViewModel>

<h1>Zarejestrowani użytkownicy</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @if (item.ProfileImage is not null)
                        {
                            <img class="card-img-top" src="@item.ProfileImage" width="100%" height="225" alt="@item.UserName">
                        }
                        else
                        {
                            <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/Brak_zdj%C4%99cia.svg/1024px-Brak_zdj%C4%99cia.svg.png" width="100%" height="225" alt="@item.UserName">
                        }
                        <div class="card-body">
                            <p class="card-text">@item.UserName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="User" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Szczegóły</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Dashboard" asp-action="EditUserProfile" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
