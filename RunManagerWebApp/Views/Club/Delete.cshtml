@using RunManagerWebApp.Data.Enum;
@using RunManagerWebApp.ViewModels;
@model Club;

@{
    ViewData["Title"] = "Usuwanie drużyn";
}


<h3>Jesteś pewny, że chcesz usunąć @Html.DisplayFor(x=>x.Title)</h3>
<div>
    <hr />
    <div class="col align-self-center text-center">
        <img src="@Model.Image" width="200" />
    </div>
    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <input type="hidden" value="AddressId" id="AddressId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Nazwa</label>
            <input asp-for="Title" class="form-control" placeholder="Nazwa" readonly />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Opis</label>
            <input asp-for="Description" class="form-control" placeholder="Opis" readonly />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label">Logo</label>
            <input asp-for="Image" class="form-control" placeholder="URL" readonly />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RaceType">Rodzaj biegów</label>
            <select asp-for="RaceType" asp-items="@Html.GetEnumSelectList(typeof(RaceType))" class="form-control" readonly disabled></select>
            <span asp-validation-for="RaceType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.PostalCode" class="control-label">Kod pocztowy</label>
            <input asp-for="Address.PostalCode" class="form-control" placeholder="Kod pocztowy" readonly></input>
            <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City" class="control-label">Miasto</label>
            <input asp-for="Address.City" class="form-control" placeholder="Miasto" readonly></input>
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street" class="control-label">Ulica i numer</label>
            <input asp-for="Address.Street" class="form-control" placeholder="Ulica i numer" readonly></input>
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
    </form>

    <div class="form-group mt-2">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Usuń" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Wróć do istniejących juz klubów</a>
        </form>
    </div>
</div>
